<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Authorization Tests Suite">
    <listeners>
        <listener class-name="helpers.MyListener"></listener>
    </listeners>
    <test name="Login Page Tests Chrome browser">
        <parameter name="remote" value="false"></parameter>
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name="tests.way2automation.AlertPageTests">
                <methods>
                    <include name="testInputAlertBox"/>
                </methods>
            </class>
            <class name="tests.way2automation.DroppablePageTests">
                <methods>
                    <include name="testDragAndDropExample1"/>
                </methods>
            </class>
            <class name="tests.sql.exercises.SqlExercisesPageTests">
                <methods>
                    <include name="testAuthorizationWithoutLoginAndSaveCookiesToFile"/>
                    <include name="testAuthorizationWithoutLoginWithTheirCookies"/>
                </methods>
            </class>
            <class name="tests.way2automation.LoginPageTests">
                <methods>
                    <include name="testLoginWithInvalidDataOfDifferentTypes"/>
                    <include name="testMessagesUnderFieldLoginAndPassword"/>
                    <include name="testValidLoginAndPassword"/>
                    <include name="testInvalidLoginAndPassword"/>
                    <include name="testValidLoginAndEmptyPassword"/>
                    <include name="testEmptyLoginAndPassword"/>
                    <include name="testScrollIsNotVisibleInMaximumWindow"/>
                </methods>
            </class>
        </classes>
    </test>
