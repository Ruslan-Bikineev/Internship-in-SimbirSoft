<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Authorization Tests Suite">
    <listeners>
        <listener class-name="helpers.MyListener"></listener>
    </listeners>
    <parameter name="remote" value="false"></parameter>
    <test name="Login Page Tests Chrome browser">
        <parameter name="browser" value="Chrome"></parameter>
        <packages>
            <package name="tests.*"></package>
        </packages>
    </test>
    <test name="Login Page Tests Firefox browser">
        <parameter name="browser" value="Firefox"></parameter>
        <packages>
            <package name="tests.*"></package>
        </packages>
    </test>
    <test name="Login Page Tests Edge browser">
        <parameter name="browser" value="Edge"></parameter>
        <packages>
            <package name="tests.*"></package>
        </packages>
    </test>
    <test name="Login Page Tests IE browser">
        <parameter name="browser" value="IE"></parameter>
        <packages>
            <package name="tests.*"></package>
        </packages>
    </test>
</suite>